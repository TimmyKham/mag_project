{% extends 'base.html.twig' %}

{% block title 'ADL PARTNER' %}

{%  block body %}
    <div class="jumbotron text-center">
        <h1>Bienvenue sur ADLP Shop </h1>
        <p>Votre kiosque magazines à prix réduits</p>
    </div>

    <div class="container">
        <h2>Nos derniers magazines</h2>
        <div class="row flex">
            {% for magazines in magazines %}

                <div class="col-3">
                    <div class="card">
                        {% if magazines.filename %}
                            <img src="/images/magazines/{{ magazines.filename }}" alt="card-img-top" style="width: 100%; height: auto;">
                        {% else %}
                            <img src="/images/magazines/blank_mag.png" alt="card-img-top" style="width: 100%; height: auto;">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">
                             <a href="{{ path('magazine.show', {id: magazines.id, slug: magazines.slug}) }}"> {{ magazines.title }}</a>
                            </h5>
                            <p class="card.text">{{ magazines.category}}</p>
                            <div class="text-primary" style="font-weight: bold;font-size: 2rem">{{ magazines.price}} €</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}